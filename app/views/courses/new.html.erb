<% provide(:title, 'Create a course') %>
<h1>Create a course</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@course, url: create_path) do |f| %>
      

      <%= f.label :name %>
      <%= f.text_field :name %>


      <%= f.submit "Create course", class: "btn btn-primary", id: "login" %>

    <% end %>
  </div>
</div>
